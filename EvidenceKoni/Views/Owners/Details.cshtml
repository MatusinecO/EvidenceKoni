@model EvidenceKoni.Models.Owner


@{
    ViewData["Title"] = "@Model.FullName";
}

<h1>@Model.FullName</h1>

<hr />
<div class="row">
    <div class="col">
        <dl class="row">
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Adress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Adress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
        </dl>
        <div class="btn btn-group">
            <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
        </div>
    </div>

    <div class="col">
        <h3>Koně</h3>
        <table>
            <thead>
                <tr>
                    <th>Jméno </th>
                    <th>Datum narození </th>
                    <th>Barva </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var horse in Model.Horses)
                {
                    <tr>
                        <td><a class="text-decoration-none text-success" asp-controller="Horses" asp-action="Details" asp-route-id="@horse.Id"><strong>@horse.Name</strong></a></td>
                        <td>@horse.BirthDate.ToShortDateString()</td>
                        <td>@horse.Color</td>
                    </tr>
                   
                }
            </tbody>
        </table>
    </div>


    <div class="col">
        <h3>Ustájení</h3>
        <table>
            <thead>
                <tr>
                    <th>Ustájený od</th>
                    <th>Ustájený do</th>
                    <th>Cena</th>
                    <th>Platba</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var stable in Model.Stables)
                {
                    <tr>
                        <td>@stable.StabledFrom.ToShortDateString()</td>
                        <td>@stable.StabledTo.ToShortDateString()</td>
                        <td>@stable.Price</td>
                        <td>@stable.Paid</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>














