@model EvidenceKoni.Models.Procedure

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Přehled</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Operation)</th>
                <th>@Html.DisplayNameFor(model => model.DateOfProcedure)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Horse.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Worker.FullName)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Operation)</td>
                <td>@Html.DisplayFor(model => model.DateOfProcedure)</td>
                <td>@Html.DisplayFor(model => model.Price)</td>
                <td>@Html.DisplayFor(model => model.Horse.Name)</td>
                <td>@Html.DisplayFor(model => model.Worker.FullName)</td>
            </tr>
        </tbody>
    </table>

<div class="d-flex justify-content-between align-items-center">
    <div class="me-2">
        <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@Model?.Id">Upravit</a> 
        <a class="btn btn-outline-dark" asp-action="Index">Zpět na seznam</a>
    </div>
</div>
