@model EvidenceKoni.Models.Procedure

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Upravit</h1>

<h4 class="text-center">Procedury</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Operation" class="control-label"></label>
                    <input asp-for="Operation" class="form-control" />
                    <span asp-validation-for="Operation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfProcedure" class="control-label"></label>
                    <input asp-for="DateOfProcedure" class="form-control" />
                    <span asp-validation-for="DateOfProcedure" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HorseId" class="control-label">Kůň</label>
                    <select asp-for="HorseId" class="form-control" asp-items="ViewBag.HorseId"></select>
                    <span asp-validation-for="HorseId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WorkerId" class="control-label">Pracovník:</label>
                    <select asp-for="WorkerId" class="form-control" asp-items="ViewBag.WorkerId"></select>
                    <span asp-validation-for="WorkerId" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Uložit" class="btn btn-outline-dark mb-2 mt-2" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-outline-primary">Zpět na seznam</a>
</div>


