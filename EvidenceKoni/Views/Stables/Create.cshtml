@model EvidenceKoni.Models.Stable

@{
    ViewData["Title"] = "Create";
}


<h1 class="text-center">Vytvořit</h1>

<h4 class="text-center">Nový záznam</h4>
<hr />
<div class="container d-flex justify-content-center">
    <div class="row">
        <style>
            /* Fixed width for the form container */
            .container > .row > .col-md-6 {
                width: 500px; /* Adjust the width as needed */
            }
        </style>
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Paid" class="control-label"></label>
                    <select asp-for="Paid" class="form-control" asp-items="Html.GetEnumSelectList<Paid>()"></select>
                    <span asp-validation-for="Paid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StabledFrom" class="control-label"></label>
                    <input asp-for="StabledFrom" class="form-control" />
                    <span asp-validation-for="StabledFrom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StabledTo" class="control-label"></label>
                    <input asp-for="StabledTo" class="form-control" />
                    <span asp-validation-for="StabledTo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Owners.FullName)
                    <select asp-for="OwnerId" class="form-control" asp-items="ViewBag.OwnerId"></select>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Vytvořit" class="btn btn-outline-success mb-2 mt-2" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-outline-primary">Zpět na seznam</a>
</div>

